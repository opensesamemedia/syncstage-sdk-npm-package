{
  "compilerOptions": {
    "lib": ["ES6", "dom"],
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./lib",
    "declarationDir": "./lib/types",
    "importHelpers": true,
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "types": [],
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules", "./.vscode", "./**/*.spec.ts"]
}
